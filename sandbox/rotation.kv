<MyButton>
    angle: 0

<Example>:
    MyButton
        size:50,50
        center:self.parent.center
        text: "example"
        on_press: self.parent.animate(self)
        canvas.before:
            PushMatrix
            Rotate:
                angle: self.angle
                axis: 0,0,1
                origin: self.center
        canvas.after:
            PopMatrix